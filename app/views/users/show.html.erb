<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
    <% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
	  <h1>
	    <%= gravatar_for @user %>
	    <%= @user.name %>
	  </h1>
	</section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
 </div>
 